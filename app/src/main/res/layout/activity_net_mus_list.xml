<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.amia.zplayer.Activity.NetMusListActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/net_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/net_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有音乐"
            android:textAlignment="center"
            android:textColor="#363636"
            android:textSize="17dp" />
    </android.support.v7.widget.Toolbar>
    <include layout="@layout/bottom_control" />
    <ListView
        android:id="@+id/net_music_list"
        android:layout_below="@id/net_tool_bar"
        android:layout_above="@+id/con_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <ProgressBar
        android:id="@+id/wait_progress"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/no_res"
        android:text="暂无结果"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
