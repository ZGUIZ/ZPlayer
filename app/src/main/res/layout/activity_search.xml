<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.amia.zplayer.Activity.SearchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/res_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5">
        <RelativeLayout
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/sear_res_ib"
                android:src="@drawable/find"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                android:layout_marginRight="6dp"

                android:layout_alignParentRight="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <AutoCompleteTextView
                android:id="@+id/sear_mus_tv"
                android:layout_centerVertical="true"
                android:padding="6dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/sear_res_ib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/res_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <ProgressBar
            android:id="@+id/net_music_prog"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
